 pipeline {
    agent any
    
    stages {
        options {
            timeout(time: 10, unit: 'MINUTES') 
        }
        stage('Build') {
            steps {
                git 'https://github.com/amurphy89/family_tree'
                sh './cicd/jenkins/build.sh'
            }
            post {
                success {
                    archiveArtifacts 'dist/**.whl'
                }
                failure {
                    error('Build stage failed, exiting pipeline.')
                }
            }
        }
        stage('Test') {
            steps {
                sh './cicd/jenkins/test.sh'
            }
            post {
                success {
                    junit 'test-report.xml'
                }
            }
        }    
    }
}